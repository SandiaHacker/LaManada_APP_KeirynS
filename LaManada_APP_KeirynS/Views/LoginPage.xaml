<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LaManada_APP_KeirynS.Views.LoginPage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="Black"
             BackgroundImageSource="wpsandy">
    <VerticalStackLayout Padding="20,0,20,0" VerticalOptions="CenterAndExpand">

        <Image x:Name="ImgLogo" Source="iconyuya" HeightRequest="150"/>
        <Entry x:Name="TxtUserName" Margin="0,30,0,10"  Placeholder="Username/Email" Keyboard="Email" FontSize="25"/>
        <Entry x:Name="TxtPassword" Placeholder="Password" Keyboard="Text" IsPassword="True" FontSize="25"/>
        <Switch x:Name="SwShowPassword" IsToggled="False" Toggled="SwShowPassword_Toggled" />

        <Button x:Name="BtnLogin" Text="LOGIN" BackgroundColor="Green" Margin="0,30,0,0"/>

        <Button x:Name="BtnSignUp" Text="Sign Up" BackgroundColor="#F4A020" Margin="0,20,0,20"/>

        <Button x:Name="LblPasswordRecovery" BackgroundColor="#8A36D2" Text="Password Recovery" Margin="0,1,0,20" />


    </VerticalStackLayout>
</ContentPage>